        <label for="color1_box">
          Color1
        </label>

        <input type="text" id="color1_box" name="query_color1">
      </div>

      <div>
        <label for="color2_box">
          Color2
        </label>

        <input type="text" id="color2_box" name="query_color2">
      </div>

