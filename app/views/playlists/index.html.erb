        <td>
          <%= a_playlist.scent1 %>
        </td>

        <td>
          <%= a_playlist.scent2 %>
        </td>

        <td>
          <%= a_playlist.texture %>
        </td>

        <td>
          <%= a_playlist.likes_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_playlist.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_playlist.updated_at) %> ago
        </td>

        <td>
          <a href="/playlists/<%= a_playlist.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
